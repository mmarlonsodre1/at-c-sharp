@{
    ViewData["Title"] = "New";
}

@model Book

<h1>Criar Novo</h1>

@using (Html.BeginForm(actionName: "Save", controllerName: "Book", FormMethod.Post))
{
    <div class="form-group">
        <label for="txtName">Título?</label>
        @Html.TextBoxFor(x => x.Title)
        @Html.ValidationMessageFor(x => x.Title)
    </div>
    <div class="form-group">
        <label for="txtSurname">Sobrenome?</label>
        @Html.TextBoxFor(x => x.ISBN)
        @Html.ValidationMessageFor(x => x.ISBN)
    </div>
    <div class="form-group">
        <label for="txtEmail">Ano?</label>
        @Html.TextBoxFor(x => x.Year)
        @Html.ValidationMessageFor(x => x.Year)
    </div>
    <div class="form-group">
        <label for="txtAuthor">Autor</label>
        @if (ViewBag.Authors != null)
        {
            <select name="cars" id="cars">
                @foreach (var author in ViewBag.Authors)
                {
                    <option value="@author.Id">@author.FirstName @author.LastName</option>
                }
            </select>
        }
    </div>
    <button type="submit" class="btn btn-primary">Criar novo</button>
}