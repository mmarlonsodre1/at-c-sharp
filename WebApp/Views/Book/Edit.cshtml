
@{
    ViewData["Title"] = "Edit";
}

@model Book

<h1>Editando</h1>

<form method="post" asp-action="SaveEdit" asp-controller="Book" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="txtName">Título?</label>
        <input type="text" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        ISBN?</label>
        <input type="text" asp-for="ISBN" />
        <span asp-validation-for="ISBN"></span>
    </div>
    <div class="form-group">
        Ano?</label>
        <input type="number" asp-for="Year" />
        <span asp-validation-for="Year"></span>
    </div>
    <div class="form-group" style="display: none;">
        Id do Author?</label>
        <input type="text" asp-for="AuthorId" />
        <span asp-validation-for="AuthorId"></span>
    </div>
    <button type="submit" class="btn btn-primary">Editar</button>
</form>

