@{
    ViewData["Title"] = "New";
}

@model Author

<h1>Criar Novo</h1>

@using (Html.BeginForm(actionName: "Save", controllerName: "Author", FormMethod.Post))
{
    <div class="form-group">
        <label for="txtName">Nome?</label>
        @Html.TextBoxFor(x => x.FirstName)
        @Html.ValidationMessageFor(x => x.FirstName)
    </div>
    <div class="form-group">
        <label for="txtSurname">Sobrenome?</label>
        @Html.TextBoxFor(x => x.LastName)
        @Html.ValidationMessageFor(x => x.LastName)
    </div>
    <div class="form-group">
        <label for="txtEmail">Email?</label>
        @Html.TextBoxFor(x => x.Email)
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="txtDate">Data de Nascimento?</label>
        @Html.EditorFor(x => x.Birthday)
        @Html.ValidationMessageFor(x => x.Birthday)
    </div>
    <button type="submit" class="btn btn-primary">Criar novo</button>
}